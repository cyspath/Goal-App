<% action = session == true ? session_url : users_url %>
<% button_text = session == true ? "Sign In!" : "Sign Up!" %>

<form action="<%= action %>" method="POST" >
  <%= auth_token %>

  <label>Email
  <input type="text"
         name="user[email]"
         value="<%= @user.email unless session %>"></label>

   <label>Password
   <input type="password"
          name="user[password]"></label>

  <input type="submit" value="<%= button_text %>">
</form>
